        "description": "Criar um novo Usuário",
        "requestBody": {
          "description": "Campos Obrigatórios para criação de um usuário",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Rocketseat",
                  "email": "oi@rocketseat.com.br"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação Realizado com Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "admin": {
                        "type": "boolean"
                      },
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "admin": false,
                      "id": "c41c560c-dfe3-4a48-8e37-9da325e25995",
                      "name": "Luis Felipe",
                      "email": "felipe-mara2003@hotmail.com",
                      "created_at": "2021-10-19T21:25:53.740Z",
                      "updated_at": "2021-10-19T22:24:12.721E"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email ja esta sendo Utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "This email is already in use"
                  }
